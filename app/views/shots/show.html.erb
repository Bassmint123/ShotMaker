<%= render partial: "shared/header" %>
<h1>Shot Info</h1>

<div class="main movie-show">
  <div class="container">
    <div class="movie">
      
      <!-- Display the shot's info here -->
      <div class="info">
        <%= image_tag @shot.image %>
        <h3 class="movie-title"><%= @shot.name %></h3>
        <p class="movie-release-year"><%= @shot.color %></p>
        <p class="movie-plot"><%= @shot.description %></p>
      </div>
    </div>

    <h1>Ingredients</h1>
    <% @ingredients.each do |ingredient| %>
    <div class="actor">
      <%= image_tag ingredient.image %>
      <h3 class="actor-name"><%= ingredient.ingredientname %></h3>
      <p class="actor-bio"><%= ingredient.description %></p>
    </div>
		<% end %>
  </div>
</div>
<%= render partial: "shared/footer" %>