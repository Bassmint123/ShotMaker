<%= render partial: "shared/header" %>

<div class="main">
  <div class="container"> 
      
      <% provide(:title, 'Sign up') %>
      <h2>Sign Up</h2>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
        <%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>
          <%= render 'shared/error_messages' %>

          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control input-lg' %>
          <br>
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control input-lg' %>
          <br>
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control input-lg' %>
          <br>
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, class: 'form-control input-lg' %>
          <br>
          <br>
          <%= f.submit "Create my account", class: "btn btn-primary btn-lg" %>
        <% end %>
      </div>
    </div>
    <br><br>

  </div>
</div>

<%= render partial: "shared/footer" %>

