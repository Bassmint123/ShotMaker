<%= render partial: "shared/header" %>

<div class="main">
  <div class="container">

    <% provide(:title, "Edit user") %>
    <h2>Update your profile</h2>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control input-lg' %>
        <br>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control input-lg' %>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control input-lg' %>
        <br>
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control input-lg' %>
        <br>
        <br>
        <%= f.submit "Save changes", class: "btn btn-primary btn-lg" %>
        <% end %>
        <br>
        <div class="gravatar_edit">
          <%= gravatar_for @user %>
          <a href="http://gravatar.com/emails" target="_blank">change</a>  <!-- open the page in a new window or tab -->
        </div>
        <br>
      </div>
    </div>
  </div>
</div>
<br><br>
<%= render partial: "shared/footer" %>