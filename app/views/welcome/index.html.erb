
<div class="welcome_container">

<div class="ad_space">
<!-- Side Navigation -->
  <div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <%= link_to "Home", "/#", class: "a:hover" %>
    <%= link_to "Shots", "/shots", class: "a:hover" %>
    <%= link_to "Ingredients", "/ingredients", class: "a:hover" %>
    <%= link_to "About", "/about", class: "a:hover" %>
    <%= link_to "Contact", "/contact", class: "a:hover" %>
    <% if logged_in? %>
      <%= link_to "Users", '#' %>
      <%= link_to "Profile", current_user %>
      <%= link_to "Settings", '#' %>
      <%= link_to "Log out", logout_path, method: "delete" %>
    <% else %>
      <%= link_to "Log in", login_path %>
    <% end %>
  </div>
  <span style="padding: 7px 0px 0px 7px;font-size:30px;cursor:pointer; color:white" onclick="openNav()">&#9776</span>
</div>

  <div class="welcome_shot">
    <div class="welcome_message">
      <p class="wtext_1">Wecome to ShotMaker!</p>
      <p class="wtext_2">(You must be 21 to enter...or just somebody cool.)</p>
      <div class="login-sign-up-buttons">
        <!-- login button trigger modal -->
        <%= link_to "Login", "#myModal", class: "btn btn-primary btn-lg pull-left", "data-toggle" => "modal" %>
        <!-- signup button to go to sign up -->
        <%= link_to "Signup", signup_path, class: "btn btn-lg btn-primary pull-right" %>
      </div>
    </div>
  </div>
  <div class="ad_space">
  	<%= render partial: "shared/welcomefooter" %>
  </div>
</div>


<!-- login modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Please login</h4>
      </div>
      <div class="modal-body">
        <br>
        <form accept-charset="UTF-8" action="/users" class="new_user" id="new_user" method="post">
          <input name="utf8" type="hidden" value="&#x2713;" />
          <input name="authenticity_token" type="hidden" value="NNb6+J/j46LcrgYUC60wQ2titMuJQ5lLqyAbnbAUkdo=" />
          <label><b>Username</b></label>
          <br>
          <input class="form-control input-lg" type="text" placeholder="Enter Username" name="uname" required>
          <br><br>
          <label><b>Password</b></label>
          <br>
          <input class="form-control input-lg" type="password" placeholder="Enter Password" name="psw" required>
          <br>
          <button type="button" style="margin: 7px;" class="btn btn-default btn-lg" data-toggle="modal" data-target="#forgotModal">Forgot My Password</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-lg" data-dismiss="modal">Close</button>
       <!-- <input class="btn btn-primary" name="commit" type="submit" value="Login" /> -->
        <%= link_to 'Login', shots_path, :class=>"btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>
</div>


<!-- forgot password modal -->
<div class="modal fade" id="forgotModal" tabindex="-1" role="dialog" aria-labelledby="forgotModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close btn-lg" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="forgotModalLabel">Get a new password</h4>
      </div>
      <div class="modal-body">
        <br>
        <div style="height: 100px">
        <form accept-charset="UTF-8" action="/users" class="new_user" id="new_user" method="post">
          <p>Enter your email address and a new password will be sent.</p>
          <label for="user_email">Email</label>
          <input class="form-control input-lg" id="user_email" name="user[email]" type="email" />
          <br>
        </form>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-lg" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary btn-lg">Submit</button>
      </div>
    </div>
  </div>
</div>



